{
  "compilerOptions": {
    // Configuración de compilación moderna
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    
    // Configuración de módulos para Next.js
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    
    // Configuración JSX para Next.js
    "jsx": "preserve",
    "incremental": true,
    
    // Plugin de Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    // Configuración de rutas
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  
  // Archivos a incluir
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "contracts/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ],
  
  // Archivos a excluir
  "exclude": [
    "node_modules",
    "cache",
    "artifacts",
    ".next",
    "out",
    "dist"
  ]
}